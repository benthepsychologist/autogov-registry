{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://autogov.dev/schemas/v1/policy.json",
  "title": "Autogov Policy Pack",
  "description": "Policy-as-code pack defining rules, constraints, and role bindings. Patterns: OPA/Rego, Sentinel, Kyverno.",
  "type": "object",
  "required": ["kind", "metadata"],
  "properties": {
    "kind": {
      "const": "policy",
      "description": "Pack type discriminator"
    },
    "metadata": {
      "$ref": "#/$defs/metadata"
    },
    "rules": {
      "type": "array",
      "description": "Atomic, discrete rule objects",
      "items": {
        "$ref": "#/$defs/rule"
      }
    },
    "constraints": {
      "$ref": "#/$defs/constraints"
    },
    "layers": {
      "type": "array",
      "description": "Module/layer dependency rules",
      "items": {
        "$ref": "#/$defs/layerRule"
      }
    },
    "roles": {
      "type": "object",
      "description": "Role bindings - what each role must follow and can do",
      "additionalProperties": {
        "$ref": "#/$defs/roleBinding"
      }
    },
    "escalation": {
      "type": "array",
      "description": "What to do when policies conflict with requests",
      "items": {
        "$ref": "#/$defs/escalationRule"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "rule": {
      "type": "object",
      "description": "Atomic rule object (OPA/Sentinel style)",
      "required": ["id", "description", "severity"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique rule identifier (e.g., 'layering.verb_to_job')",
          "pattern": "^[a-z][a-z0-9_.]*$"
        },
        "description": {
          "type": "string"
        },
        "severity": {
          "type": "string",
          "enum": ["error", "warning", "info"]
        },
        "applies_to": {
          "type": "array",
          "description": "Roles this rule applies to (all if omitted)",
          "items": {
            "type": "string"
          }
        },
        "rationale": {
          "type": "string",
          "description": "Why this rule exists"
        },
        "refs": {
          "type": "array",
          "description": "References to ADRs, docs, or external resources",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "constraints": {
      "type": "object",
      "description": "Allow/deny/require constraint collections",
      "properties": {
        "allow": {
          "type": "object",
          "properties": {
            "paths": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/pathConstraint"
              }
            },
            "imports": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "schemas": {
              "type": "array",
              "description": "Canonizer schema IDs that are allowed",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "deny": {
          "type": "object",
          "properties": {
            "paths": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/pathConstraint"
              }
            },
            "imports": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "schemas": {
              "type": "array",
              "description": "Canonizer schema IDs that are forbidden",
              "items": {
                "type": "string"
              }
            },
            "patterns": {
              "type": "array",
              "description": "Code patterns that are forbidden",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "require": {
          "type": "object",
          "properties": {
            "patterns": {
              "type": "array",
              "description": "Code patterns that must be followed",
              "items": {
                "type": "string"
              }
            },
            "naming": {
              "$ref": "#/$defs/namingConstraints"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "pathConstraint": {
      "type": "object",
      "required": ["path"],
      "properties": {
        "path": {
          "type": "string",
          "description": "Glob pattern"
        },
        "reason": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "namingConstraints": {
      "type": "object",
      "properties": {
        "files": {
          "$ref": "#/$defs/namingRule"
        },
        "classes": {
          "$ref": "#/$defs/namingRule"
        },
        "functions": {
          "$ref": "#/$defs/namingRule"
        },
        "variables": {
          "$ref": "#/$defs/namingRule"
        }
      },
      "additionalProperties": false
    },
    "namingRule": {
      "type": "object",
      "required": ["pattern"],
      "properties": {
        "pattern": {
          "type": "string",
          "description": "Regex pattern"
        },
        "reason": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "layerRule": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "can_import": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cannot_import": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "roleBinding": {
      "type": "object",
      "properties": {
        "must_follow_rules": {
          "type": "array",
          "description": "Rule ID patterns this role must follow (e.g., 'layering.*')",
          "items": {
            "type": "string"
          }
        },
        "directives": {
          "type": "array",
          "description": "Instructions for this role",
          "items": {
            "type": "string"
          }
        },
        "can_modify_policies": {
          "type": "boolean"
        },
        "can_override": {
          "type": "array",
          "description": "Rule IDs this role can override with justification",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "escalationRule": {
      "type": "object",
      "required": ["id", "trigger", "action", "message"],
      "properties": {
        "id": {
          "type": "string"
        },
        "trigger": {
          "type": "string"
        },
        "action": {
          "type": "string",
          "enum": ["refuse", "warn", "refuse_with_alternative", "escalate"]
        },
        "message": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Unique pack identifier",
          "pattern": "^[a-z][a-z0-9-]*$"
        },
        "version": {
          "type": "string",
          "description": "Semantic version",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "description": {
          "type": "string"
        },
        "owner": {
          "type": "string",
          "description": "Role or team that owns this pack"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "stable", "deprecated"],
          "default": "draft"
        },
        "updated": {
          "type": "string",
          "description": "Last update date (YYYY-MM-DD format)",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "checksum": {
          "type": "object",
          "description": "Content integrity verification",
          "properties": {
            "sha256": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
