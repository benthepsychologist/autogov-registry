{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://autogov.dev/schemas/v1/pack.base.json",
  "title": "Autogov Pack Base Schema",
  "description": "Shared metadata structure for all autogov pack kinds (policy, arch, state)",
  "type": "object",
  "required": ["kind", "metadata"],
  "properties": {
    "kind": {
      "type": "string",
      "enum": ["policy", "arch", "state"],
      "description": "Pack type discriminator"
    },
    "metadata": {
      "$ref": "#/$defs/metadata"
    }
  },
  "$defs": {
    "metadata": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Unique pack identifier",
          "pattern": "^[a-z][a-z0-9-]*$"
        },
        "version": {
          "type": "string",
          "description": "Semantic version",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "description": {
          "type": "string"
        },
        "owner": {
          "type": "string",
          "description": "Role or team that owns this pack"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "stable", "deprecated"],
          "default": "draft"
        },
        "updated": {
          "type": "string",
          "description": "Last update date (YYYY-MM-DD format)",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "checksum": {
          "type": "object",
          "description": "Content integrity verification",
          "properties": {
            "sha256": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
